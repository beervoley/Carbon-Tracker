<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context="com.vsevolod.carbontracker.UI.AddRouteActivity">
    <TableLayout
        android:layout_width="360dp"
        android:layout_height="500dp"
        android:padding="16dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="11dp"
        android:id="@+id/tableLayout5">
        <TableRow
            android:layout_width="368dp"
            android:layout_height="0dp"
            android:paddingBottom="16dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/route_name"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/edittxt_route_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintTop_toTopOf="parent" />
        </TableRow>
        <TableRow
            android:layout_width="368dp"
            android:layout_height="0dp"
            android:paddingBottom="16dp">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city_segment_km"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/edittxt_city_segment"
                android:layout_width="32dp"
                android:layout_height="44dp"
                android:ems="10"
                android:inputType="numberDecimal" />
        </TableRow>
        <TableRow
            android:layout_width="368dp"
            android:layout_height="0dp"
            android:paddingBottom="16dp">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highway_segment_km"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/edittxt_highway_segment"
                android:layout_width="105dp"
                android:layout_height="44dp"
                android:ems="10"
                android:inputType="numberDecimal" />
        </TableRow>
        <TableRow
            android:layout_width="368dp"
            android:layout_height="0dp"
            android:paddingTop="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_distance"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteY="286dp" />
            <TextView
                android:id="@+id/total_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="286dp" />
        </TableRow>


        <TableRow>

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_route_done"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/okay_save"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_alignBottom="@+id/tableLayout5"
        android:layout_alignEnd="@+id/tableLayout5" />

    <Button
        android:id="@+id/btn_route_delete"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/delete"
        android:layout_marginStart="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_alignBottom="@+id/tableLayout5"
        android:layout_alignParentStart="true" />


</RelativeLayout>