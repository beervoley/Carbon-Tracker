<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_carbon_tracker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/background"
    tools:context="com.vsevolod.carbontracker.UI.WelcomeScreenActivity">


    <ImageView
        android:layout_width="70dp"
        app:srcCompat="@mipmap/car"
        android:id="@+id/imageCar"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_height="70dp" />


    <Button
        android:text="@string/main_menu"
        android:background="@mipmap/cloud"
        android:id="@+id/btn_main"
        android:textColor="#e9e0e0"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:layout_width="290px"
        android:padding="5dp"
        android:layout_marginBottom="57dp"
        android:layout_height="200px"
        android:layout_marginEnd="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp">

        <TextView
            android:text="@string/carbon_calculator2"
            android:textColor="#009948"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_title"
            android:textSize="55sp"
            android:textStyle="normal|bold"
            android:layout_alignBottom="@+id/imageCloud3"
            android:layout_alignParentStart="true" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <ImageView
        android:layout_width="90dp"
        app:srcCompat="@mipmap/cloud2"
        android:id="@+id/imageCloud3"
        android:scaleType="fitCenter"
        android:layout_height="65dp"
        android:layout_above="@+id/imageCloud2"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="37dp" />

    <ImageView
        app:srcCompat="@mipmap/cloud2"
        android:id="@+id/imageCloud2"
        android:scaleType="fitCenter"
        android:layout_height="55dp"
        android:layout_width="90dp"
        android:layout_marginStart="30dp"
        android:layout_above="@+id/btn_main"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp" />
</RelativeLayout>